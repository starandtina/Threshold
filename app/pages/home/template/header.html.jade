  a(data-popup-close="data-popup-close", href="/", class="internal-home")= _t['Home']
  a(data-popup-close="data-popup-close", href="/dashboard/list", class="internal-home")= _t['Dashboard']
  a(data-popup-close="data-popup-close", href="/about/", class="internal-about")= _t['About']

#tmpst-header-account-popup.hiding.tmpst-header-popup
  a(data-popup-close="data-popup-close", href="/", class="internal-home")= _t['Home']
  a(data-popup-close="data-popup-close", href="/dashboard/list", class="internal-home")= _t['Dashboard']
  a(data-popup-close="data-popup-close", href="/about", class="internal-home")= _t['About']
  a(data-popup-close="data-popup-close", href="/account/logout", class="internal-home")= _t['Logout']
