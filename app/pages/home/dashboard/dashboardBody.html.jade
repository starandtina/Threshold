.container
  .tmpst-full-canvas
    h2.label(data-section='create') CREATE THRESHOLD
    form#threshold-form.form-horizontal(role='form')
      .form-group
        label.col-sm-2.control-label(for='at') AT
        .col-sm-4
          select.form-control.time(name='at', id='at')
            each t, index in thresholds.timeRange
              if t == at
                option(selected="selected", value="#{t}")= t
              else if index === 1
                option(selected="selected", value="#{t}")= t
              else
                option(value="#{t}")= t
      .form-group
        label.col-sm-2.control-label(for='until') UNTIL
        .col-sm-4
           select.form-control.time(name='until', id='until')
            each t, index in thresholds.timeRange
              if t == until
                option(selected="selected", value="#{t}")= t
              else if index === 1
                option(selected="selected", value="#{t}")= t
              else
                option(value="#{t}")= t
      .form-group
        label.col-sm-2.control-label WHEN
        .col-sm-4
          select.col-md-4.form-control(name='operator')
            each val, key in thresholds.operator
              if key == operator
                option(selected="selected", value="#{key}")= val
              else
                option(value="#{key}")= val
      .form-group
        label.col-sm-2.control-label 
        .col-sm-2
          input.form-control(type='text', name='warning')
        .col-sm-4
          label.trigger-text-container.trigger-warning-text
            span.trigger-text trigger a warning
            i.fa.fa-exclamation-triangle
      .form-group
        label.col-sm-2.control-label 
        .col-sm-2
          input.form-control(type='text', name='error')
        .col-sm-4
          label.trigger-text-container.trigger-error-text
            span.trigger-text trigger a error
            i.fa.fa-exclamation-triangle
      .form-group
        label.col-sm-2.control-label 
        .col-sm-2
          input.form-control(type='text', name='critical')
        .col-sm-4
          label.trigger-text-container.trigger-critical-text 
            span.trigger-text trigger a critical
            i.fa.fa-exclamation-triangle
      .form-group
        .col-sm-offset-2.col-sm-10
          a.btn.btn-default.create-threshold
            i.fa.fa-plus CREATE
      .form-group
        .validation-error.col-sm-offset-2.col-sm-10

    h2.label(data-section='list') MY THRESHOLDS
    #thresholds-container.thresholds-container
      .header-group
        .table-row
          .row.threshold-form
            .cell.col-md-2 At
            .cell.col-md-2 Util
            .cell.col-md-4 Comparison
            .cell.col-md-3 Alert
            .cell.col-md-1 #
      .row-group

    h2.label(data-section='chart') MY THRESHOLDS CHARTS
    #thresholds-timechart.thresholds-timechart
      .row
        each t, index in thresholds.timeRange
          if index % 4 === 1 && index !== 0 && index !== 1
            .col-md-1.time= t
      .bg-gray
      .timechart-group


